{
  "name": "transcodes-ui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.4",
  "scripts": {
    "postinstall": "[ -z $CI ] && lefthook install || true",
    "format": "biome format --write --files-ignore-unknown=true --no-errors-on-unmatched",
    "check": "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "lefthook": "2.0.9",
    "turbo": "^2.6.3"
  }
}
