{
  "name": "@transcodes/ui-components",
  "version": "0.1.0",
  "private": false,
  "description": "Lit 3.x component library with Reactive Controllers",
  "type": "module",
  "author": "Transcodes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transcodings/transcodes-ui.git",
    "directory": "packages/ui-components"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/ui-components.js",
  "module": "./dist/ui-components.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
