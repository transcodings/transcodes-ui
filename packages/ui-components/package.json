{
  "name": "@transcodes/ui-components",
  "version": "0.4.3",
  "private": false,
  "description": "Lit 3.x component library with Reactive Controllers",
  "keywords": [
    "lit",
    "web-components",
    "ui-components",
    "design-system",
    "storybook"
  ],
  "author": {
    "name": "Transcodes",
    "url": "https://github.com/transcodings"
  },
  "license": "MIT",
  "homepage": "https://github.com/transcodings/transcodes-ui/tree/main/packages/ui-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transcodings/transcodes-ui.git",
    "directory": "packages/ui-components"
  },
  "bugs": {
    "url": "https://github.com/transcodings/transcodes-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "dist/**/*.js",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./primitives": {
      "types": "./dist/primitives/index.d.ts",
      "import": "./dist/primitives/index.js"
    },
    "./screens": {
      "types": "./dist/screens/index.d.ts",
      "import": "./dist/screens/index.js"
    },
    "./controllers": {
      "types": "./dist/controllers/index.d.ts",
      "import": "./dist/controllers/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "prebuild-storybook": "cd ../design-tokens && bun run build && cd ../ui-components && cp -r ../design-tokens/build .storybook/design-tokens",
    "build-storybook": "storybook build",
    "predev": "cd ../design-tokens && bun run build && cd ../ui-components && cp -r ../design-tokens/build .storybook/design-tokens",
    "clean": "rm -rf dist",
    "dev": "storybook dev -p 6006",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "dependencies": {
    "@transcodes/design-tokens": "^0.4.3"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.1.9",
    "@storybook/addon-docs": "^10.1.9",
    "@storybook/addon-links": "^10.1.9",
    "@storybook/web-components": "^10.1.9",
    "@storybook/web-components-vite": "^10.1.9",
    "lit": "^3.3.1",
    "storybook": "^10.1.9",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4"
  }
}
