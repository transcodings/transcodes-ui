{
  "name": "@transcodes/design-tokens",
  "version": "0.3.6",
  "private": false,
  "description": "Style Dictionary based design tokens with dark mode support for consistent, beautiful interfaces",
  "keywords": [
    "design-tokens",
    "css-variables",
    "style-dictionary",
    "dark-mode",
    "wcag",
    "accessibility"
  ],
  "author": {
    "name": "Transcodes",
    "url": "https://github.com/transcodings"
  },
  "license": "MIT",
  "homepage": "https://github.com/transcodings/transcodes-ui/tree/main/packages/design-tokens#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transcodings/transcodes-ui.git",
    "directory": "packages/design-tokens"
  },
  "bugs": {
    "url": "https://github.com/transcodings/transcodes-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": [
    "./build/*.css",
    "./build/index.js"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    },
    "./css": "./build/tokens.css",
    "./tokens.css": "./build/tokens.css",
    "./tokens-dark.css": "./build/tokens-dark.css",
    "./components.css": "./build/components.css",
    "./components": {
      "types": "./build/components.d.ts",
      "import": "./build/components.js"
    },
    "./types": "./build/tokens.d.ts",
    "./json": "./build/tokens.json"
  },
  "files": [
    "build/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun --bun style-dictionary build --config sd.config.ts && bun --bun style-dictionary build --config sd.config.dark.ts && bun run scripts/build-dark-css.ts && bun run scripts/build-components-js.ts && bun run scripts/build-index.ts && bun run scripts/minify-css.ts",
    "clean": "rm -rf build"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "lightningcss": "^1.30.2",
    "style-dictionary": "^5.1.1"
  }
}
